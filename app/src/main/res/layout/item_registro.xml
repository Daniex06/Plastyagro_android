<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#757575"
    android:padding="1dp"> <!-- Grosor del borde exterior -->

    <!-- Celda ID Trabajador -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_id_trabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Celda Nombre Trabajador -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_nombre_trabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Celda Fecha -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Celda Hora -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Celda Tipo Registro -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_tipo_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Celda Dentro/Fuera del Horario -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:background="@drawable/cell_border"
        android:gravity="center">
        <TextView
            android:id="@+id/column_dentro_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
